{
  "openapi": "3.0.0",
  "info": {
    "title": "Collection Store API",
    "description": "API for those looking for product data for interior decoration ðŸš€",
    "version": "1.0.0",
    "contact": {
      "name": "Wiliam V. Joaquim",
      "email": "wiliamjoaquim@gmail.com"
    }
  },
  "paths": {
    "/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a new user",
        "description": "Route for create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Fulano",
                "email": "youremail@email.com",
                "password": "stRongPass1*"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "User alredy exists!"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Login ",
        "description": "Route for login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "youremail@email.com",
                "password": "stRongPass1*"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Email or password invalid!"
          }
        }
      }
    },
    "/product/new": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Create a new product",
        "description": "Register a new product with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "userId": {
                    "type": "number"
                  },
                  "title": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "example": "active or inactive"
                  },
                  "price": {
                    "type": "number"
                  },
                  "sku": {
                    "type": "string"
                  },
                  "gtin": {
                    "type": "number"
                  },
                  "brand": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "userId": 2,
                "title": "Persiana Romana Bambu",
                "status": "active",
                "price": 349.00,
                "sku": "2675606",
                "gtin": 123456784787,
                "brand": "TokandTok",
                "description": "As Persianas Romana de Bambu Block sÃ£o prÃ¡ticas e modernas, devido as tramas intercaladas de bambu elas oferecem alta de retenÃ§Ã£o de luminosidade.",
                "category": "Persianas"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "This sku (our sku) already exists!"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    },
    "/product/image-upload/{sku}": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Upload image ",
        "description": "Upload image for product endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "This sku (our sku) already exists!"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
