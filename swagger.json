{
  "openapi": "3.0.0",
  "info": {
    "title": "Collection Store API",
    "description": "API for those looking for product data for interior decoration üöÄ",
    "version": "1.0.0",
    "contact": {
      "name": "Wiliam V. Joaquim",
      "email": "wiliamjoaquim@gmail.com"
    }
  },
  "paths": {
    "/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a new user",
        "description": "Route for create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Fulano",
                "email": "youremail@email.com",
                "password": "stRongPass1*"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "User alredy exists!"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Login ",
        "description": "Route for login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "youremail@email.com",
                "password": "stRongPass1*"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Email or password invalid!"
          }
        }
      }
    },
    "/product/new": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Create a new product",
        "description": "Register a new product with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "userId": {
                    "type": "number"
                  },
                  "title": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "example": "active or inactive"
                  },
                  "price": {
                    "type": "number"
                  },
                  "sku": {
                    "type": "string"
                  },
                  "gtin": {
                    "type": "number"
                  },
                  "brand": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "userId": 2,
                "title": "Persiana Romana Bambu",
                "status": "active",
                "price": 349.00,
                "sku": "2675606",
                "gtin": 123456784787,
                "brand": "TokandTok",
                "description": "As Persianas Romana de Bambu Block s√£o pr√°ticas e modernas, devido as tramas intercaladas de bambu elas oferecem alta de reten√ß√£o de luminosidade.",
                "category": "Persianas"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "This sku (our sku) already exists!"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    },
    "/product/update": {
      "patch": {
        "tags": [
          "Products"
        ],
        "summary": "Update product",
        "description": "Update a product with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "example": "active or inactive"
                  },
                  "price": {
                    "type": "number"
                  },
                  "sku": {
                    "type": "string"
                  },
                  "gtin": {
                    "type": "number"
                  },
                  "brand": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "id": "7658f2fc-a710-466e-a6c5-50a993b01c88",
                "title": "Persiana Romana Bambu",
                "status": "active",
                "price": 149.00,
                "sku": "2675606",
                "gtin": 123456784787,
                "brand": "TokandTok",
                "description": "As Persianas Romana de Bambu Block s√£o pr√°ticas e modernas, devido as tramas intercaladas de bambu elas oferecem alta de reten√ß√£o de luminosidade.",
                "category": "Persianas"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "This sku (our sku) does not exists!"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    },
    "/product/image-upload/{sku}": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Uploads an image",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "sku",
            "in": "path",
            "description": "SKU product",
            "required": true,
            "style": "simple"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "This sku does not exists!"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    },
    "/product/image-delete/{sku}": {
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Delete an image",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "sku",
            "in": "path",
            "description": "Image ID",
            "required": true,
            "style": "simple"
          }
        ],
        "responses": {
          "200": {
            "description": "Image deleted successfully"
          },
          "400": {
            "description": "This image ID does not exists"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    },
    "/product/delete/{sku}": {
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Delete an product",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "sku",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "style": "simple"
          }
        ],
        "responses": {
          "200": {
            "description": "Image deleted successfully"
          },
          "400": {
            "description": "This image ID does not exists"
          },
          "401": {
            "description": "Token not found!"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
